{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "session_child_cycle": "ctrl+n",
    "session_child_cycle_reverse": "ctrl+c"
  },
  "permission": {
    "bash": {
      "git push": "deny",
      "git status": "allow",
      "git diff": "allow",
      "npm run build": "allow",
      "ls": "allow",
      "pwd": "allow",
      "grep": "allow",
      "find*": "allow",
      "cat": "allow",
      "rg": "allow",
      "head": "allow",
      "cd": "allow",
      "rails": "allow",
      "cd": "allow",
    }
  },
  "plugin": [
    "opencode-anthropic-auth@0.0.7",
  ]
}
